.logo {
  display: block;
  margin: 40px auto;
  width: 92px;
  height: 82px;
}
.slide-image{  
    width: 100%;  
}

.zhekou { padding: 20px 20px 0;}
.zhekou image{ width: 100%; height: 166rpx;}
.desc{ display: flex; align-items: center;justify-content: space-between; padding: 20rpx 0 ;}
.desc view{display: flex; align-items: center; flex: 1; font-size: 12px; padding-left: 5%}
.desc view image{ width: 20px; height: 20px; margin-right: 5rpx}
.left-box{
  float:left;
  margin-right:5.33%;
  margin-left:4%;
  margin-top:3.75%;
  width:42.6%;
  height: 23.9%;
}

.right-box{
  float:right;
  margin-top:3.75%;
  margin-right:4%;
  width:42.6%;
  height: 23.9%;
}

.goods-img{
  width:100%;height:160px; border: 1px solid #efefef;
}

.good-name{
  text-align:center;
  font-size: 15px;
  display:block;
text-overflow: ellipsis; display: -webkit-box; -webkit-box-orient: vertical;  -webkit-line-clamp: 2; overflow:hidden; 
}

.good-price{
  text-align:center;
  color:red;
  font-size: 15px;
}

.title{ text-align: center; padding-top: 20px; padding-bottom: 30px; position: relative}
.title text{ position: absolute; right: 20px; color: #999; font-family: Arial, Helvetica, sans-serif}

.wx-wrap{ border-radius: 3px; margin-bottom: 30px; padding-left: 20px}
.wx-view{display: flex; justify-content: flex-start; flex-flow: row;}
.wx-scroll-view{ width: 100%; }
.wx-navigator_movieitem{ width: 200rpx; padding: 15rpx; display: flex; justify-content: center;align-items: center;}
.wx-navigator_movieitem text{ display: block; width: inherit; font-size: 28rpx; text-align: center}
.wx-navigator_movieitem image{ width: 200rpx; height: 100px}
.wx-navigator_movieitem:nth-last-of-type(1){ border: 0; width: 150rpx }
.wx-navigator_movieitem.on{ background: #FA4D22; color: #FFF}