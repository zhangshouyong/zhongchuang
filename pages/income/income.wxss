@import '/pages/common/cell/cell';

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  justify-content: space-between;
  background-color: #fff;
}

.userinfo .cell-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo .cell-left .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo .cell-left .userinfo-avatar>image {
  width: 100%;
  height: 100%;
}

.userinfo-nickname {
  color: #aaa;
  margin-left: 30rpx;
}

.commission {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  justify-content: space-between;
  background-color: #fff;
}

.commission .cell-left {
  display: flex;
  flex-direction: column;
  width: 500rpx;
  align-items: center;
  background-color: #f3a93b;
  height: 140rpx;
  justify-content: center;
}

.commission .team {
  display: flex;
  flex-direction: column;
  width: 500rpx;
  align-items: center;
  height: 110rpx;
  justify-content: center;
}

.order {
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: #000;
  font-size: 24rpx;
}

.order-header {
  background-color: lightgoldenrodyellow;
  border-bottom: 1px solid #c8c8c8;
  border-right: 1px solid #c8c8c8;
  height: 80rpx;
}

.order-content {
  border-bottom: 1px solid #c8c8c8;
  border-right: 1px solid #c8c8c8;
  color: #787878;
  height: 60rpx;
}

.swiper-tab-list:first-of-type {
  border-left: 0px;
}

.swiper-tab-list.on {
  color: #fa4b22;
}

.swiper-box {
  margin-top: 90rpx;
  display: flex;
  flex: 1;
  height: 1000rpx;
}

.swiper-container {
  display: flex;
  flex: 1;
}

.income-op {
  border: 1px solid #c8c8c8;
  border-radius: 8rpx;
  font-size: 20rpx;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.draw-money-view {
  height: 40rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
  padding-left: 15rpx;
  border: 1px solid white;
  border-radius: 5rpx;
}

.draw-money {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-bottom: 1px solid #c8c8c8;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  margin-top: 20rpx;
}

.draw-money-all {
  border: 1px solid #238e23;
  background-color: #238e23;
  border-radius: 8rpx;
  font-size: 20rpx;
  padding: 5rpx;
  margin-left: 50rpx;
  color: white;
}

.draw-money-input {
  height: 40rpx;
  min-height: 40rpx;
  line-height: 40rpx;
}

.drawmoney-btn {
  width: 50%;
  display: flex;
  border: 1px solid #238e23;
  background-color: #238e23;
  border-radius: 10rpx;
  height: 60rpx;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
  margin-left: 180rpx;
  margin-top: 50rpx;
  color: white;
}