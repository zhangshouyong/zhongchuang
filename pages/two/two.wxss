@import '/pages/common/cell/cell';

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  justify-content: space-between;
  background-color: #fff;
}

.userinfo .cell-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo .cell-left .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo .cell-left .userinfo-avatar>image {
  width: 100%;
  height: 100%;
}

.userinfo-nickname {
  color: #aaa;
  margin-left: 30rpx;
}

.two-img-container {
  display: flex;
  margin: 10rpx;
  border: 1px solid #c8c8c8;
  border-radius: 15rpx;
  height: 500rpx;
  padding: 10rpx;
  justify-content: center;
  align-items: center;
  background-color: white;
}

.two-img {
  width: 200px; 
  height: 200px; 
  background-color: #eeeeee;
  border: 0.2px solid #c8c8c8;
  border-radius: 10rpx;
}