@import '/pages/common/cell/cell';

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  justify-content: space-between;
  background-color: #fff;
}

.userinfo .cell-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo .cell-left .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  background-color: #f7f7f7;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo .cell-left .userinfo-avatar>image {
  width: 100%;
  height: 100%;
}

.userinfo-nickname {
  color: #aaa;
  margin-left: 30rpx;
}

.row-list {
  margin: 30rpx 0 0;
  border-top: 0.5px solid #ddd;
  border-bottom: 0.5px solid #ddd;
}

.log-out {
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  padding: 30rpx;
  color: #d66d5c;
  background-color: #fff;
  margin: 30rpx 0;
}

.page-user .contactBtn {
  width: 100%;
  border: none;
  border-radius: 0;
  padding: 0;
  margin: 0;
  font-size: 1em;
  position: static;
  line-height: normal;
}

.page-user .contactBtn::after {
  content: none;
}

.page-user .contactBtn>.row-cell {
  border-bottom: 0.5px solid #ddd;
}

.kind-container {
  display: flex;
  flex: 1;
  flex-direction: row;
}

.item-container {
  flex: 1;
}

.article-item-container {
  margin-top: 15rpx;
  border-bottom: 0.5px solid #ddd;
}

.commission {
  display: flex;
  flex-direction: row;
  align-items: center;
  
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  justify-content: space-between;
  background-color: #fff;
}
.commission .cell-left {
  display: flex;
  flex-direction:column;
  width: 500rpx;
  align-items: center;
  background-color: #F3A93B;
}

.commission .team {
  display: flex;
  flex-direction:column;
  width: 500rpx;
  align-items: center;
  
}