/* 公用样式 */

page {
  background-color: #f7f7f7;
  min-height: 100%;
}

view[hidden] {
  display: none !important;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #3f3f3f;
}

.arrow-right {
  width: 20rpx;
  height: 20rpx;
  border-right: 1px solid #aaa;
  border-top: 1px solid #aaa;
  transform: rotate(45deg);
  text-align: end;
}

.hover-opacity,
.btn-opacity:active {
  opacity: 0.7;
}
.hover-bg,
.btn-bg:active {
  background-color: #eee;
}

.single-line {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
